{
  "name": "@voiceflow/common",
  "description": "Junk drawer of utility functions",
  "version": "1.0.0",
  "author": "Voiceflow",
  "bugs": {
    "url": "https://github.com/storyflow/common/issues"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@voiceflow/verror": "^1.1.0",
    "bluebird": "^3.5.4",
    "bunyan": "^1.8.12",
    "bunyan-prettystream": "^0.1.3",
    "http-status": "^1.3.2",
    "lodash": "^4.17.11",
    "luxon": "^1.15.0"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^7.5.0",
    "@voiceflow/eslint-config": "^1.0.0",
    "@voiceflow/prettier-config": "^1.0.4",
    "chai": "^4.2.0",
    "codacy-coverage": "^3.4.0",
    "commitizen": "^3.1.1",
    "commitlint": "^7.5.2",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.16.0",
    "fixpack": "^2.3.1",
    "husky": "^2.3.0",
    "istanbul": "^0.4.5",
    "lint-staged": "^8.1.7",
    "mocha": "^6.1.4",
    "nyc": "^14.1.0",
    "prettier": "^1.17.1",
    "semantic-release": "^15.13.3",
    "sinon": "^7.3.2"
  },
  "files": [
    "lib/**",
    "config/**",
    "app/**",
    "*.js",
    "!scratch.*"
  ],
  "homepage": "https://github.com/storyflow/common#readme",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "keywords": [
    "utilities"
  ],
  "license": "ISC",
  "lint-staged": {
    "package.json": [
      "fixpack",
      "git add"
    ],
    "**/*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "main": "index.js",
  "nyc": {
    "exclude": [
      "coverage/**",
      "tests/**",
      "scratch.js",
      "index.js",
      ".*.js",
      "commitlint.config.js"
    ],
    "reporter": [
      "html",
      "text",
      "text-summary",
      "lcov"
    ],
    "all": true
  },
  "prettier": "@voiceflow/prettier-config",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/storyflow/common.git"
  },
  "scripts": {
    "lint": "eslint \"**/*.js\" --fix",
    "prepare": "fixpack",
    "send-coverage": "cat ./coverage/lcov.info | codacy-coverage",
    "test": "nyc mocha --use_strict \"tests/**/*.it.js\" \"tests/**/*.unit.js\"",
    "unit": "mocha --use_strict --exit \"tests/**/*.unit.js\""
  }
}
