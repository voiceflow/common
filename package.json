{
  "name": "@voiceflow/common",
  "description": "Junk drawer of utility functions",
  "version": "1.0.0",
  "author": "Voiceflow",
  "bugs": {
    "url": "https://github.com/storyflow/common/issues"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "lodash": "^4.17.20",
    "moment": "^2.24.0",
    "randomstring": "^1.1.5"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^8.0.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/chai": "^4.2.14",
    "@types/lodash": "^4.14.165",
    "@types/mocha": "^8.0.4",
    "@types/randomstring": "^1.1.6",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "@voiceflow/eslint-config": "^2.0.1",
    "@voiceflow/git-branch-check": "^1.0.2",
    "@voiceflow/prettier-config": "^1.0.4",
    "@zerollup/ts-transform-paths": "^1.7.18",
    "chai": "^4.2.0",
    "codacy-coverage": "^3.4.0",
    "commitizen": "^3.1.1",
    "commitlint": "^8.0.0",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^6.0.1",
    "express": "^4.17.1",
    "fixpack": "^2.3.1",
    "husky": "^2.6.0",
    "istanbul": "^0.4.5",
    "lint-staged": "^8.2.1",
    "mocha": "^6.1.4",
    "nyc": "^14.1.0",
    "prettier": "^1.18.2",
    "semantic-release": "^15.13.17",
    "sinon": "^7.3.2",
    "supertest": "^4.0.2",
    "ts-mocha": "^8.0.0",
    "ttypescript": "^1.5.12",
    "typescript": "^4.1.2"
  },
  "files": [
    "build"
  ],
  "homepage": "https://github.com/storyflow/common#readme",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "git-branch-check"
    }
  },
  "keywords": [
    "utilities"
  ],
  "license": "ISC",
  "lint-staged": {
    "package.json": [
      "fixpack",
      "git add"
    ],
    "**/*.{js,ts}": [
      "eslint --fix",
      "git add"
    ]
  },
  "main": "build/index.js",
  "prettier": "@voiceflow/prettier-config",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/storyflow/common.git"
  },
  "scripts": {
    "build": "yarn clean && ttsc --project ./tsconfig.build.json",
    "clean": "rimraf build",
    "commit": "git-cz",
    "lint": "eslint \"**/*.{js,ts}\"",
    "lint:quiet": "yarn lint --quiet",
    "prepare": "yarn build",
    "test": "NODE_ENV=test nyc ts-mocha --paths --opts mocha.opts"
  }
}
